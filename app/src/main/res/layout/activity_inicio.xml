<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#098"
        android:hint="Atras"
        android:minHeight="30dp"
        android:onClick="onClickVolver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#098"
        android:hint="Vista"
        android:minHeight="30dp"
        android:onClick="onClickVista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="635dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Cartelera de cine"
            android:textColor="@color/black"
            android:textSize="30dp"
            />
        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelicula"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Director"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="8dp"

                    />

                <TextView
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Imagen"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    />

            </TableRow>
            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Jonh Wick"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="12sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="23-05-2022"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="12sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Chad Stahelski"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="12sp"

                    />

                <ImageView
                    android:layout_width="119dp"
                    android:layout_height="50dp"
                    android:src="@drawable/jonh"

                    />


            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
